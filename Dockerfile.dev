# 开发环境 Dockerfile
FROM node:20-alpine

# 设置工作目录
WORKDIR /app

# 全局安装 pnpm
RUN npm install -g pnpm

# 复制 package.json 和 pnpm-lock.yaml
COPY claude-code-router/package.json claude-code-router/pnpm-lock.yaml ./

# 安装依赖
RUN pnpm install --frozen-lockfile

# 进入 UI 目录并安装依赖
RUN cd ui && npm install

# 复制源代码
COPY claude-code-router ./

# 构建整个项目
RUN pnpm run build

# 创建 non-root 用户
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 claude

# 创建配置目录
RUN mkdir -p /root/.claude-code-router && \
    chown -R claude:nodejs /root && \
    chown -R claude:nodejs /app

# 复制示例配置文件
COPY --chown=claude:nodejs claude-code-router/config.example.json /root/.claude-code-router/config.json
COPY --chown=claude:nodejs claude-code-router/custom-router.example.js /root/.claude-code-router/custom-router.example.js

# 设置权限
USER claude

# 暴露端口
EXPOSE 3456 9229

# 健康检查
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3456', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) }).on('error', () => process.exit(1))"

# 开发模式启动 - 支持热重载
CMD ["node", "dist/cli.js", "start"]